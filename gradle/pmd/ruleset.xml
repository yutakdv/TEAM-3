<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="TEAM-3 Java Ruleset - Best Practices Only"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0
                             http://pmd.github.io/pmd-7.0.0/ruleset_2_0_0.xsd"
         xmlns:pmd="http://pmd.sourceforge.net/ruleset/2.0.0">

    <description>
        TEAM-3 프로젝트용:
        SpotBugs가 런타임 오류를 처리하므로,
        PMD는 코드 품질·유지보수성(Best Practices) 리포트 전용으로 사용.
    </description>

    <!-- 빌드 산출물 제외 -->
    <exclude-pattern>.*/build/.*</exclude-pattern>
    <exclude-pattern>.*/out/.*</exclude-pattern>

    <!-- ===== Basic Code Style / Error-Prone ===== -->
    <rule ref="category/java/bestpractices.xml/UnusedImports"/>
    <rule ref="category/java/bestpractices.xml/UnusedLocalVariable"/>
    <rule ref="category/java/bestpractices.xml/UnusedPrivateField"/>
    <rule ref="category/java/bestpractices.xml/AvoidDuplicateLiterals"/>
    <rule ref="category/java/bestpractices.xml/AvoidReassigningParameters"/>
    <rule ref="category/java/bestpractices.xml/UnnecessaryFullyQualifiedName"/>

    <!-- ===== Design / Maintainability ===== -->
    <rule ref="category/java/design.xml/CyclomaticComplexity">
        <properties>
            <property name="methodReportLevel" value="12"/>
        </properties>
    </rule>
    <rule ref="category/java/design.xml/ExcessiveMethodLength">
        <properties>
            <property name="minimum" value="80"/>
        </properties>
    </rule>
    <rule ref="category/java/design.xml/ExcessiveParameterList">
        <properties>
            <property name="minimum" value="7"/>
        </properties>
    </rule>
    <rule ref="category/java/design.xml/CollapsibleIfStatements"/>
    <rule ref="category/java/design.xml/SimplifyBooleanExpressions"/>

    <!-- ===== Performance ===== -->
    <rule ref="category/java/performance.xml/AvoidInstantiatingObjectsInLoops"/>

    <!-- ===== Logging / Style ===== -->
    <rule ref="category/java/logging-java.xml/SystemPrintln"/>
    <rule ref="category/java/logging-java.xml/AvoidPrintStackTrace"/>

</ruleset>